{
  "compilerOptions": {
    "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017"
    ],
    "jsx": "preserve",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
